<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="head">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:padding">36dp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/gold</item>
    </style>

    <style name="head_surface">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/head_rounded</item>
        <item name="android:layout_marginTop">36dp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:padding">4dp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="style_type">
        <item name="android:background">@drawable/layout_square</item>
    </style>

    <style name="layout_rounded">
        <item name="android:background">@drawable/layout_rounded</item>
    </style>

    <style name="button_check">
        android:textSize="12sp"
    </style>

    <style name="button_action" parent="Base.Theme.StarHero">
        <item name="android:background">@drawable/button_action</item>
        <item name="android:layout_margin">4dp</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="arrow_back" parent="Base.Theme.StarHero">
        <item name="android:layout_width">50dp</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:layout_margin">25dp</item>
        <item name="android:backgroundTint">@color/primary</item>
        <item name="android:background">@drawable/arrow_back</item>
        <item name="android:contentDescription">@string/back</item>
    </style>
</resources>