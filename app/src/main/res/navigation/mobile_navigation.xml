<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/nav_home">

    <fragment
        android:id="@+id/nav_home"
        android:name="com.delek.starhero.ui.home.HomeFragment"
        android:label="@string/menu_home"
        tools:layout="@layout/fragment_home" >
        <action
            android:id="@+id/action_nav_home_to_nav_selection"
            app:destination="@id/nav_selection" />
    </fragment>

    <fragment
        android:id="@+id/nav_selection"
        android:name="com.delek.starhero.ui.selection.SelectionFragment"
        android:label="@string/menu_gallery"
        tools:layout="@layout/fragment_selection" />

    <fragment
        android:id="@+id/nav_slideshow"
        android:name="com.delek.starhero.ui.slideshow.SlideshowFragment"
        android:label="@string/menu_slideshow"
        tools:layout="@layout/fragment_slideshow" />
</navigation>