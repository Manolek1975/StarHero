<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/nav_home">

    <fragment
        android:id="@+id/nav_home"
        android:name="com.delek.starhero.ui.home.HomeFragment"
        android:label="@string/menu_home"
        tools:layout="@layout/fragment_home" >
        <action
            android:id="@+id/action_nav_home_to_nav_select"
            app:destination="@id/nav_select" />
    </fragment>

    <fragment
        android:id="@+id/nav_select"
        android:name="com.delek.starhero.ui.select.SelectFragment"
        android:label="@string/menu_select"
        tools:layout="@layout/fragment_select" >
        <action
            android:id="@+id/action_nav_select_to_nav_detail"
            app:destination="@id/nav_detail" />
    </fragment>

    <fragment
        android:id="@+id/nav_detail"
        android:name="com.delek.starhero.ui.detail.DetailFragment"
        android:label="fragment_detail"
        tools:layout="@layout/fragment_detail" >
        <argument
            android:name="hero_id"
            app:argType="integer" />
        <action
            android:id="@+id/action_nav_detail_to_nav_select"
            app:destination="@id/nav_select" />
        <action
            android:id="@+id/action_nav_detail_to_powerFragment"
            app:destination="@id/nav_power" />
    </fragment>
    <fragment
        android:id="@+id/nav_power"
        android:name="com.delek.starhero.ui.power.PowerFragment"
        android:label="fragment_power"
        tools:layout="@layout/fragment_power" >
        <action
            android:id="@+id/action_powerFragment_to_nav_detail"
            app:destination="@id/nav_detail" />
        <argument
            android:name="hero_id"
            app:argType="integer" />
        <action
            android:id="@+id/action_powerFragment_to_starsFragment"
            app:destination="@id/nav_sector" />
        <action
            android:id="@+id/action_nav_power_to_nav_surface"
            app:destination="@id/nav_surface" />
    </fragment>

    <fragment
        android:id="@+id/nav_sector"
        android:name="com.delek.starhero.ui.sector.SectorFragment"
        android:label="fragment_stars"
        tools:layout="@layout/fragment_sector" >
        <action
            android:id="@+id/action_nav_sector_to_nav_star"
            app:destination="@id/nav_star" />
    </fragment>

    <fragment
        android:id="@+id/nav_star"
        android:name="com.delek.starhero.ui.star.StarFragment"
        android:label="fragment_star"
        tools:layout="@layout/fragment_star" >
        <argument
            android:name="starId"
            app:argType="integer" />
        <action
            android:id="@+id/action_nav_star_to_nav_planet"
            app:destination="@id/nav_planet" />
        <action
            android:id="@+id/action_nav_star_to_nav_sector"
            app:destination="@id/nav_sector" />

    </fragment>
    <fragment
        android:id="@+id/nav_planet"
        android:name="com.delek.starhero.ui.planet.PlanetFragment"
        android:label="fragment_planet"
        tools:layout="@layout/fragment_planet" >
        <argument
            android:name="planetId"
            app:argType="integer" />
        <action
            android:id="@+id/action_nav_planet_to_nav_surface"
            app:destination="@id/nav_surface" />
    </fragment>
    <fragment
        android:id="@+id/nav_surface"
        android:name="com.delek.starhero.ui.surface.SurfaceFragment"
        android:label="fragment_surface"
        tools:layout="@layout/fragment_surface" >
        <argument
            android:name="planetId"
            app:argType="integer" />
    </fragment>
    <fragment
        android:id="@+id/nav_settings"
        android:name="com.delek.starhero.ui.settings.SettingsFragment"
        android:label="fragment_settings"
        tools:layout="@layout/fragment_settings" />

</navigation>