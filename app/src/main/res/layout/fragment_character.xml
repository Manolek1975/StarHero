<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_sistema"
    tools:context=".ui.character.CharacterFragment">

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_hero_name"
        style="@style/head"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="AMAZON" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/iv_hero_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="8dp"
        app:layout_constraintTop_toBottomOf="@id/iv_head"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:background="@drawable/h_amazon" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/iv_head"
        style="@style/button_slot"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintTop_toBottomOf="@id/tv_hero_name"
        app:layout_constraintEnd_toStartOf="@id/iv_neck"
        app:layout_constraintStart_toStartOf="parent"/>

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/iv_neck"
        style="@style/button_slot"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/eq_neck"
        app:layout_constraintTop_toBottomOf="@id/tv_hero_name"
        app:layout_constraintStart_toEndOf="@id/iv_head"
        app:layout_constraintEnd_toEndOf="parent"
        android:tooltipText="@string/todo"/>

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/iv_chest"
        style="@style/button_slot"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/iv_hero_image"
        app:layout_constraintEnd_toStartOf="@id/iv_hero_image"/>

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/iv_belt"
        style="@style/button_slot"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/iv_chest"
        app:layout_constraintEnd_toStartOf="@id/iv_hero_image"/>

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/iv_weapon"
        style="@style/button_slot"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/iv_belt"
        app:layout_constraintEnd_toStartOf="@id/iv_hero_image"/>

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/iv_shoulder"
        style="@style/button_slot"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/iv_hero_image"
        app:layout_constraintStart_toEndOf="@id/iv_hero_image"/>

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/iv_gloves"
        style="@style/button_slot"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/iv_shoulder"
        app:layout_constraintStart_toEndOf="@id/iv_hero_image"/>

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/iv_shield"
        style="@style/button_slot"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/iv_gloves"
        app:layout_constraintStart_toEndOf="@id/iv_hero_image"/>

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/iv_pants"
        style="@style/button_slot"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintTop_toBottomOf="@id/iv_hero_image"
        app:layout_constraintEnd_toStartOf="@id/iv_boots"
        app:layout_constraintStart_toStartOf="parent"/>

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/iv_boots"
        style="@style/button_slot"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/iv_hero_image"
        app:layout_constraintStart_toEndOf="@id/iv_pants"
        app:layout_constraintEnd_toEndOf="parent"/>


</androidx.constraintlayout.widget.ConstraintLayout>